<!DOCTYPE html>
<html>
  <% include ./partials/head.ejs %>
  <body>
    <header>
      <h1><%= room %></h1>
      <h2 id="username"><%= user %></h2>
      <button id="ready-button">not ready</button>
    </header>

    <section>
      <h3>Other players</h3>
      <ul id="user-list"></ul>

      <button id="start-button" class="inactive" data-ready="false">
        Start game
      </button>
    </section>

    <section>
      <h3>Destination</h3>
      <article id="wiki-destination-embed"></article>
    </section>
    <section>
      <h3>Your window</h3>
      <h4>Pages: <span id="pages">-</span></h4>
      <h4>Clicks: <span id="clicks">0</span></h4>
      <article id="wiki-embed"></article>
    </section>

    <script src="/socket.io/socket.io.js"></script>
    <script src="javascripts/room.js"></script>
  </body>
</html>
