<!DOCTYPE html>
<html lang="en">
  <% include ./partials/head.ejs %>
  <body>
    <header>
      <h1>Wikipedia European Countries Game</h1>
    </header>
    <main>
      <section id="room-information">
        <article>
          <h2>Room: <%= room %></h2>
              Player: <span id="username"><%= user %></span>
        </article>
        <article id="other-players">
          <h3>Other players</h3>
          <ul id="user-list">
            <li>
            </li>
          </ul>
        </article>
        
        <button id="ready-button">not ready</button>
        <button id="start-button" class="inactive" data-ready="false">
          Start game
        </button>
        
        
      </section>
    </main>
    

    <section>
      

    </section>
    <section>
      <h3>Players Progress</h3>
      <ol id="players-progress-list"></ul>
    </section>
    <section>
      <h3>Destination</h3>
      <article id="wiki-destination-embed"></article>
    </section>
    <section>
      <h3>Your window</h3>
      <h4>Your visited pages:</h4>
      <ul id="pages" class="clicked-pages-list"></ul>
      <h4>Clicks: <span id="clicks">0</span></h4>
      <article id="wiki-embed"></article>
    </section>
    <section>
      <h3>Winners</h3>
      <ol id="winners-list"></ol>
      <h3>Losers</h3>
      <ol id="losers-list"></ol>
      <button id="start-over-button">start over</button>
    </section>

    <script src="/socket.io/socket.io.js"></script>
    <script src="javascripts/room.js"></script>
  </body>
</html>
